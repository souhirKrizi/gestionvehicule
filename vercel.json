{
  "version": 2,
  "builds": [
    {
      "src": "api/index.php",
      "use": "@vercel/php"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    { "handle": "filesystem" },
    { "src": "/.*", "dest": "/api/index.php" }
  ],
  "env": {
    "APP_ENV": "production",
    "APP_DEBUG": "false",
    "APP_URL": "https://gestionvehicule.vercel.app",
    "DB_CONNECTION": "sqlite",
    "SESSION_DRIVER": "cookie",
    "SESSION_SECURE_COOKIE": "true"
  }
}
